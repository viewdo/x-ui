{
  "name": "viewdo",
  "private": true,
  "version": "0.1.7",
  "license": "MIT",
  "main": "index.js",
  "author": "Jason Wicker <jason.wicker@view.do>",
  "homepage": "https://github.com/viewdo/x-ui#readme",
  "bugs": {
    "url": "https://github.com/viewdo/x-ui/issues",
    "email": "tech@view.dp"
  },
  "repository": "https://github.com/viewdo/x-ui.git",
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre:commit"
    }
  },
  "scripts": {
    "npm:install": "npx yarn",
    "pre:commit": "run-p lint test",
    "--- dev ---": "---------------",
    "build": "run-s build:core build:docs",
    "start": "run-p watch:core start:docs",
    "build:core": "yarn workspace @viewdo/x-ui run build",
    "start:core": "yarn workspace @viewdo/x-ui run start",
    "watch:core": "yarn workspace @viewdo/x-ui run build:watch",
    "test": "yarn workspace @viewdo/x-ui run test --cwd packages/core",
    "build:docs": "yarn workspace docs run build",
    "start:docs": "yarn workspace docs run start",
    "--- format ---": "---------------",
    "format": "run-s format:doctoc format:prettier format:eslint",
    "format:doctoc": "doctoc --maxlevel 3 --notitle ./CONTRIBUTING.md",
    "format:eslint": "eslint --ext .tsx,.ts --fix packages/** >/dev/null 2>&1 || true",
    "format:prettier": "prettier --write 'packages/**/*.{css,html,json,scss,yaml,yml}'",
    "format:browser": "browserslist --stats && echo '' && browserslist --coverage && echo '' && echo 'See more at https://browserl.ist/'",
    "--- lint ---": "---------------",
    "lint": "run-p lint:es lint:markdown",
    "lint:es": "eslint --ext .tsx,.ts packages/**",
    "lint:markdown": "markdownlint 'packages/**/*.md'",
    "--- publish ---": "---------------",
    "npm": "run-s build npm:version npm:publish",
    "npm:version": "npm --cwd packages/core version patch",
    "npm:publish": "npm --cwd packages/core publish",
    "--- docker ---": "---------------",
    "docker": "run-s build docker:build docker:push",
    "docker:build": "docker build -t viewdo/x-ui-docs .",
    "docker:run": "docker run --name x-ui-docs --rm -p 8181:80 viewdo/x-ui-docs",
    "docker:push": "docker push viewdo/x-ui-docs",
    "--- workspace shortcuts ---": "---------------",
    "ws:core": "yarn workspace @viewdo/x-ui "
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "typescript": "^4"
  },
  "devDependencies": {
    "@babel/core": "7.13.1",
    "@babel/highlight": "7.12.13",
    "@babel/preset-typescript": "7.13.0",
    "@stencil/core": "2.4.0",
    "@stencil/eslint-plugin": "0.3.1",
    "@stencil/sass": "1.4.1",
    "@stencil/store": "1.4.1",
    "@types/howler": "2.2.1",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@types/puppeteer": "5.4.3",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "chalk": "4.1.0",
    "doctoc": "2.0.0",
    "eslint": "7.20.0",
    "eslint-cli": "1.1.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.5",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "http-proxy-middleware": "1.0.6",
    "husky": "5.1.1",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lint-staged": "10.5.4",
    "markdownlint-cli": "0.26.0",
    "node-fetch": "2.6.1",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "prettier": "2.2.1",
    "puppeteer": "7.1.0",
    "rimraf": "3.0.2",
    "stylelint": "13.11.0",
    "stylelint-config-sass-guidelines": "8.0.0",
    "typescript": "4.1.5",
    "yargs": "16.2.0"
  },
  "jest": {
    "preset": "@stencil/core/testing",
    "testPathIgnorePatterns": [
      "<rootDir>/.scratch/",
      "dist"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --ext .tsx,.ts --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.{md,mdx}": [
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint 'packages/**/*.scss' --fix",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {}
}
