{
  "name": "viewdo",
  "private": true,
  "version": "0.1.7",
  "license": "MIT",
  "main": "index.js",
  "author": "Jason Wicker <jason.wicker@view.do>",
  "homepage": "https://github.com/viewdo/x-ui#readme",
  "bugs": {
    "url": "https://github.com/viewdo/x-ui/issues",
    "email": "tech@view.dp"
  },
  "repository": "https://github.com/viewdo/x-ui.git",
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre:commit"
    }
  },
  "scripts": {
    "npm:install": "npx yarn",
    "pre:commit": "run-p lint test",
    "--- dev ---": "---------------",
    "build": "run-s build:core build:docs",
    "start": "run-p watch:core start:docs",
    "build:core": "yarn workspace @viewdo/x-ui run build",
    "start:core": "yarn workspace @viewdo/x-ui run start",
    "watch:core": "yarn workspace @viewdo/x-ui run watch",
    "test": "yarn workspace @viewdo/x-ui run test --cwd packages/core",
    "build:docs": "yarn workspace docs run build",
    "start:docs": "yarn workspace docs run start",
    "--- format ---": "---------------",
    "format": "eslint --ext .tsx,.ts --fix packages/** >/dev/null 2>&1 || true",
    "--- lint ---": "---------------",
    "lint": "eslint --ext .tsx,.ts packages/**",
    "--- publish ---": "---------------",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d docs",
    "--- docker ---": "---------------",
    "docker": "run-s build docker:build docker:push",
    "docker:build": "docker build -t viewdo/x-ui-docs .",
    "docker:run": "docker run --name x-ui-docs --rm -p 8181:80 viewdo/x-ui-docs",
    "docker:push": "docker push viewdo/x-ui-docs",
    "--- workspace shortcuts ---": "---------------",
    "ws:core": "yarn workspace @viewdo/x-ui ",
    "ws:docs": "yarn workspace docs "
  },
  "devDependencies": {
    "@popperjs/core": "^2.9.1",
    "@stencil/eslint-plugin": "0.3.1",
    "@types/jest": "26.0.20",
    "@typescript-eslint/eslint-plugin": "4.17.0",
    "@typescript-eslint/parser": "4.17.0",
    "chalk": "4.1.0",
    "eslint": "7.21.0",
    "eslint-cli": "1.1.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "3.1.0",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "rollup-plugin-analyzer": "4.0.0",
    "typescript": "4.2.3",
    "yargs": "16.2.0"
  },
  "jest": {
    "preset": "@stencil/core/testing",
    "testPathIgnorePatterns": [
      "<rootDir>/.scratch/",
      "dist",
      "docs"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --ext .tsx,.ts --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
