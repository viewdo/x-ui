{
  "name": "viewdo",
  "private": true,
  "version": "0.1.6",
  "license": "MIT",
  "homepage": "https://github.com/viewdo/x-ui#readme",
  "bugs": {
    "url": "https://github.com/viewdo/x-ui/issues",
    "email": "tech@view.dp"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/viewdo/x-ui.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre:commit"
    }
  },
  "scripts": {
    "npm:install": "npx yarn",
    "build": "yarn workspace @viewdo/x-ui run build",
    "start:core": "yarn workspace @viewdo/x-ui run start",
    "watch:core": "yarn workspace @viewdo/x-ui run build:watch",
    "test": "yarn workspace @viewdo/x-ui run test --cwd packages/core",
    "--- dev ---": "---------------",
    "display-browser-support": "browserslist --stats && echo '' && browserslist --coverage && echo '' && echo 'See more at https://browserl.ist/'",
    "--- format ---": "---------------",
    "format": "run-s format:doctoc format:imports format:prettier format:eslint",
    "format:doctoc": "doctoc --maxlevel 3 --notitle ./README.md ./CONTRIBUTING.md",
    "format:eslint": "xo --fix ./ >/dev/null 2>&1 || true",
    "format:imports": "import-sort --write '**/*.{ts,tsx}'",
    "format:prettier": "prettier --write '**/*.{css,html,json,md,mdx,scss,ts,tsx,yaml,yml}'",
    "--- lint ---": "---------------",
    "lint": "run-p lint:es lint:markdown",
    "lint:watch": "onchange '**/src/**/*' --initial --kill --delay 1000  -- npm run lint",
    "lint:es": "xo ",
    "lint:markdown": "markdownlint  '**/*.md'",
    "--- publish ---": "---------------",
    "gs:push": "gsutil cp -r ./www gs://viewdo-static/x-ui",
    "--- docker ---": "---------------",
    "docker:build": "yarn build && docker build -t viewdo/x-ui-docs .",
    "docker:push": "docker push viewdo/x-ui-docs",
    "pre:commit": "run-p lint test",
    "--- workspace shortcuts ---": "---------------",
    "ws:core": "yarn workspace @viewdo/x-ui "
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@stencil/core": "2.3.0",
    "@stencil/eslint-plugin": "0.3.1",
    "@stencil/sass": "1.4.1",
    "@stencil/store": "1.3.0",
    "@types/howler": "2.2.1",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.20",
    "@types/puppeteer": "5.4.2",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "chalk": "4.1.0",
    "doctoc": "2.0.0",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-xo-typescript": "0.37.0",
    "eslint-formatter-pretty": "4.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "http-proxy-middleware": "1.0.6",
    "husky": "4.3.7",
    "import-sort-cli": "6.0.0",
    "import-sort-parser-typescript": "6.0.0",
    "import-sort-style-module": "6.0.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lint-staged": "10.5.3",
    "markdownlint-cli": "0.26.0",
    "node-fetch": "2.6.1",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "prettier": "2.2.1",
    "puppeteer": "5.5.0",
    "rimraf": "3.0.2",
    "stylelint": "13.8.0",
    "stylelint-config-sass-guidelines": "7.1.0",
    "typescript": "4.1.3",
    "xo": "0.37.1",
    "yargs": "16.2.0"
  },
  "jest": {
    "preset": "@stencil/core/testing",
    "testPathIgnorePatterns": [
      "<rootDir>/.scratch/",
      "dist"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "xo --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.{md,mdx}": [
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint '**/src/**/*.scss' --fix",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "workspaces": [
    "packages/core",
    "packages/plugins/*",
    "packages/examples/*"
  ],
  "dependencies": {},
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "4.13.0",
    "**/@typescript-eslint/parser": "4.13.0",
    "**/typescript": "4.1.3"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "new-cap": "off",
      "no-useless-call": "off",
      "import/no-unassigned-import": "off",
      "import/extensions": "off",
      "no-await-in-loop": "off",
      "no-alert": "off",
      "max-params": "off",
      "complexity": "off",
      "@typescript-eslint/no-extraneous-class": "off",
      "@typescript-eslint/member-ordering": "off",
      "@typescript-eslint/no-dynamic-delete": "off",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "@typescript-eslint/no-confusing-void-expression": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "@typescript-eslint/prefer-regexp-exec": "off",
      "unicorn/no-abusive-eslint-disable": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-array-reduce": "off"
    }
  }
}
