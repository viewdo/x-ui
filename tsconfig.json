{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "strict": true
  },
  "exclude": ["./packages/**/*.spec.ts?x", "./packages/**/*.e2e.ts?x", "__mocks__", "test"]
}
